
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user data for the currently authenticated user
    function getMyUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check if the user is an exporter
    function isExporter() {
      return request.auth != null && getMyUserData().userType == 'exporter';
    }

    // Helper function to check if the user is a carrier
    function isCarrier() {
      return request.auth != null && getMyUserData().userType == 'carrier';
    }

    // USERS
    match /users/{userId} {
      // A user can read their own document
      // Other authenticated users can read it too (e.g., to get exporter/carrier names)
      allow read: if request.auth != null;
      
      // A user can create their own document on sign-up
      allow create: if request.auth.uid == userId;
      
      // A user can only update their own userType if it's not already set.
      allow update: if request.auth.uid == userId &&
                       request.resource.data.userType != resource.data.userType &&
                       resource.data.userType == null;
    }

    // SHIPMENTS
    match /shipments/{shipmentId} {
      // Carriers can see all shipments
      // Exporters can only see their own
      allow read: if isCarrier() || (isExporter() && resource.data.exporterId == request.auth.uid);
      
      // Exporters can create shipments for themselves with a 'draft' status
      allow create: if isExporter() && 
                       request.resource.data.exporterId == request.auth.uid &&
                       request.resource.data.status == 'draft';

      // Only the owning exporter can update their shipment
      allow update: if isExporter() && resource.data.exporterId == request.auth.uid;
      
      // Only the owning exporter can delete a draft shipment
      allow delete: if isExporter() && 
                       resource.data.exporterId == request.auth.uid &&
                       resource.data.status == 'draft';

      // BIDS
      match /bids/{bidId} {
        // The owning exporter and all carriers can read bids
        allow read: if (isExporter() && get(/databases/$(database)/documents/shipments/$(shipmentId)).data.exporterId == request.auth.uid) || isCarrier();
        
        // Carriers can create bids on 'live' shipments
        allow create: if isCarrier() && 
                         request.resource.data.carrierId == request.auth.uid &&
                         get(/databases/$(database)/documents/shipments/$(shipmentId)).data.status == 'live';

        // Bids are immutable
        allow update, delete: if false;
      }
    }
  }
}
