rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow get, update: if isOwner(userId);
      allow create: if isOwner(userId);
      allow list, delete: if false;

      // Products can only be created if the user is the owner AND their profile document exists.
      match /products/{productId} {
        allow read, write: if isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
      }
    }
  }
}
