rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isExporter(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.userType == 'exporter';
    }

    function isCarrier(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.userType == 'carrier';
    }

    match /users/{userId} {
      // Allow get() for role-checking in helper functions
      allow get: if request.auth.uid != null;
      // Allow users to read and write their own document
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.email == request.auth.token.email;
    }

    match /shipments/{shipmentId} {
      // Exporters can create shipments for themselves
      allow create: if request.auth.uid != null 
                    && isExporter(request.auth.uid) 
                    && request.resource.data.exporterId == request.auth.uid;

      // Exporters can read their own shipments. Carriers can read all shipments.
      allow read: if request.auth.uid != null && (
                    (isExporter(request.auth.uid) && resource.data.exporterId == request.auth.uid) ||
                    isCarrier(request.auth.uid)
                  );

      // Exporters can update their own shipments under specific conditions
      allow update: if request.auth.uid != null 
                    && isExporter(request.auth.uid) 
                    && resource.data.exporterId == request.auth.uid
                    && (
                      (resource.data.status == 'draft' || resource.data.status == 'scheduled')
                      && request.resource.data.exporterId == resource.data.exporterId
                      && request.resource.data.createdAt == resource.data.createdAt
                    ) || (
                      (resource.data.status == 'draft' || resource.data.status == 'scheduled')
                      && request.resource.data.status == 'live'
                    ) || (
                      resource.data.status == 'live' 
                      && request.resource.data.status == 'awarded'
                      && request.resource.data.winningBidId != null
                    );
    }

    // Rules for bids subcollection
    match /shipments/{shipmentId}/bids/{bidId} {
      allow read: if request.auth.uid != null && (
                    (isExporter(request.auth.uid) && get(/databases/$(database)/documents/shipments/$(shipmentId)).data.exporterId == request.auth.uid) ||
                    (isCarrier(request.auth.uid) && resource.data.carrierId == request.auth.uid)
                  );

      allow create: if request.auth.uid != null 
                    && isCarrier(request.auth.uid) 
                    && request.resource.data.carrierId == request.auth.uid
                    && get(/databases/$(database)/documents/shipments/$(shipmentId)).data.status == 'live';
    }

    // Rules for register subcollection
    match /shipments/{shipmentId}/register/{carrierId} {
      allow read: if request.auth.uid != null 
                  && isCarrier(request.auth.uid) 
                  && request.auth.uid == carrierId;

      allow create: if request.auth.uid != null
                    && isCarrier(request.auth.uid)
                    && request.auth.uid == carrierId
                    && get(/databases/$(database)/documents/shipments/$(shipmentId)).data.status == 'scheduled';
    }

    // Secure rule for collection group query on 'register'
    match /{path=**}/register/{docId} {
      allow list: if request.auth.uid != null
                  && isCarrier(request.auth.uid)
                  && request.query.where.size() == 1
                  && request.query.where[0][0] == 'carrierId'
                  && request.query.where[0][1] == '=='
                  && request.query.where[0][2] == request.auth.uid;
    }
  }
}
