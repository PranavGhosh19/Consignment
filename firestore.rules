rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an employee
    function isEmployee() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'employee';
    }

    // Helper function to check if the requesting user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow user to create their own profile
      allow create: if isOwner(userId);
      // Allow user to read or update their own profile
      allow read, update: if isOwner(userId);
    }

    // Rules for the 'shipments' collection
    match /shipments/{shipmentId} {
      // Allow read access under specific conditions
      allow read: if 
        // Employees can read any shipment
        isEmployee() || 
        // The owner (exporter) can read their shipment
        isOwner(resource.data.exporterId) ||
        // Carriers can read shipments that are scheduled, live or awarded
        (resource.data.status in ['scheduled', 'live', 'awarded']);

      // Exporters can create shipments
      allow create: if request.auth.uid == request.resource.data.exporterId;

      // Exporters can update their own shipments if they are not yet awarded
      allow update: if 
        // Employees can update any shipment
        isEmployee() ||
        (isOwner(resource.data.exporterId) && resource.data.status != 'awarded');

      // Rules for 'bids' subcollection
      match /bids/{bidId} {
        // Exporter who owns the shipment can read all bids
        allow read: if 
          // Employees can read any bid
          isEmployee() ||
          isOwner(get(/databases/$(database)/documents/shipments/$(shipmentId)).data.exporterId) ||
          // Carrier can read their own bid
          isOwner(resource.data.carrierId);
        
        // Carriers can create bids on 'live' shipments
        allow create: if get(/databases/$(database)/documents/shipments/$(shipmentId)).data.status == 'live'
                      && isOwner(request.resource.data.carrierId);
      }

      // Rules for 'register' subcollection
      match /register/{carrierId} {
        // Allow read by employee or the carrier who registered
        allow read: if isEmployee() || isOwner(carrierId);
        // Carriers can register for 'scheduled' shipments
        allow create: if get(/databases/$(database)/documents/shipments/$(shipmentId)).data.status == 'scheduled'
                      && isOwner(carrierId);
      }
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
